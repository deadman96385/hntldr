# hntldr configuration
# Copy this to .env and fill in your values

# ─── REQUIRED ────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ─── LLM PROVIDER ───────────────────────────────────────────
LLM_PROVIDER=claude          # 'claude' or 'openai'
LLM_MODEL=claude-haiku-4-5-20251001
LLM_API_KEY=your_api_key_here
# LLM_MAX_TOKENS=300

# ─── ADMIN ───────────────────────────────────────────────────
# Telegram user ID(s) for error DMs and /summarize access
# Comma-separated for multiple admins (e.g. "1234,4321,5555")
# Leave empty to disable admin features
ADMIN_USER_ID=

# ─── AUTO-POSTING (optional) ─────────────────────────────────
# Set this to enable auto-posting to a channel or group
# Use @channelname for public channels, or -100XXXXXXXXXX for private ones
# Leave empty to disable auto-posting (manual /summarize only)
TELEGRAM_CHANNEL_ID=

# ─── TUNING ──────────────────────────────────────────────────
# How often to poll HN for new top stories (minutes)
POLL_INTERVAL_MINUTES=60

# Per-topic minimum score thresholds for auto-posting
# Set to -1 to never post stories of that topic
MIN_SCORE_DEFAULT=100
MIN_SCORE_SHOW_HN=50
MIN_SCORE_ASK_HN=100
MIN_SCORE_LAUNCH_HN=75
MIN_SCORE_TELL_HN=100
MIN_SCORE_JOBS=-1

# Max stories to post per poll cycle
STORIES_PER_POLL=3

# Max article text chars sent to LLM (controls cost)
MAX_ARTICLE_CHARS=4000

# HTTP request timeout (seconds)
REQUEST_TIMEOUT=15

# SQLite database path
DB_PATH=hntldr.db
